{
  vars: {
    local: {
      bashProfile: "{fs.readFile(path.join(sys.scriptDir,'my-ubuntu/templates/bash-profile.sh'))}",
    },
  },
  assertions: [
    {
      assert: "FileContains",
      with: {
        path: "{path.join(env.HOME, '/.bash_profile')}",
        contents: "{bashProfile}",
      },
    },
  ],
}
