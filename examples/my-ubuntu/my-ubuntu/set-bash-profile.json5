{
  vars: {
    bashProfile: {
      local: true,
      value: "${fs.readFile(sys.SCRIPT_DIR + '/templates/bash-profile.sh')}"
    }
  },
  assertions: [
    {
      assert: "FileContains",
      with: {
        path: "${env.HOME}/.bash_profile",
        contents: "${bashProfile}"
      }
    }
  ]
}
