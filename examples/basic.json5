{
  settings: {
    description: "A basic script",
  },
  vars: {
    testDir1: "octo-dir-1",
    testDir2: "octo-dir-2",
    testFile1: "octo-file-1",
  },
  assertions: [
    {
      description: "Create Scratch Directory",
      assert: "DirectoryExists",
      with: {
        path: "scratch/",
        mode: {
          user: "rwx",
          group: "rwx",
          other: "r-x",
        },
      },
    },
    {
      description: "Create Test Directory",
      assert: "DirectoryExists",
      with: {
        path: "{'scratch/' + vars.testDir1}",
      },
    },
    {
      description: "Create A Second Directory",
      assert: "DirectoryExists",
      with: {
        path: "{'scratch/' + vars.testDir2}",
      },
    },
    {
      assert: "FileExists",
      with: {
        path: "{'scratch/' + vars.testFile1}",
      },
    },
  ],
}
