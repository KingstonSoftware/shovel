{
  options: {
    runAsRoot: true,
  },
  vars: {
    consulVersion: "1.2.3",
    secondDirectory: "second",
  },
  assertions: [
    {
      description: "Create Test Directory",
      runAs: "root",
      assert: "DirectoryExists",
      with: {
        path: "${HOME}/octo-test2",
        owner: "vagrant:vagrant",
      },
    },
    {
      description: "Create A Second Directory",
      assert: "DirectoryExists",
      with: {
        path: "${HOME}/${secondDirectory}",
      },
    },
    {
      assert: "FileExists",
      with: {
        path: "${HOME}/octo-test/testfile.txt",
      },
    },
  ],
}
