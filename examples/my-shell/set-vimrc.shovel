{
  vars: {
    vimrc: "{path.join(user.homeDir,'.vimrc')}",
  },
  statements: [
    {
      assert: "FileExists",
      with: {
        file: "{vars.vimrc}",
        mode: { user: "rwx", group: "r-x", other: "r-x" },
      },
    },
    {
      assert: "FileContains",
      with: {
        file: "{vars.vimrc}",
        contents: "color desert\n\
set shiftwidth=2 tabstop=2 expandtab\n",
      },
    },
  ],
}
