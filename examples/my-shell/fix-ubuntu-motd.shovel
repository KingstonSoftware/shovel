{
  vars: {
    motdDir: "/etc/update-motd.d",
  },
  statements: [
    {
      assert: "FilesDeleted",
      with: {
        files: [
          "{vars.motdDir + '/10-help-text'}",
          "{vars.motdDir + '/50-motd-news'}",
          "{vars.motdDir + '/80-esm'}",
          "{vars.motdDir + '/80-livepatch'}",
          "{vars.motdDir + '/95-hwe-eol'}",
          "{vars.motdDir + '/97-overlayroot'}",
        ],
      },
      when: "{sys.id === 'ubuntu'}",
      become: "root",
    },
  ],
}
