{
  vars: {
    bashProfile: "{path.join(user.homeDir,'.bash_profile')}",
    local: {
      bashProfileContent: "{fs.readFile(path.join(sys.scriptDir,'templates/bash-profile.sh'))}",
    },
  },
  assertions: [
    {
      assert: "FileExists",
      with: {
        path: "{vars.bashProfile}",
      },
    },
    {
      assert: "FileContains",
      with: {
        path: "{vars.bashProfile}",
        contents: "{vars.local.bashProfileContent}",
      },
    },
  ],
}
