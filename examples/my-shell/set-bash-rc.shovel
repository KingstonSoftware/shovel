{
  vars: {
    bashrc: "{path.join(user.homeDir,'.bashrc')}",
    local: {
      bashrcContent: "{fs.readFile(path.join(sys.scriptDir,'templates/bash-rc.sh'))}",
    },
  },
  statements: [
    {
      assert: "FileContains",
      with: {
        file: "{vars.bashrc}",
        contents: "{vars.local.bashrcContent}",
      },
    },
  ],
}
