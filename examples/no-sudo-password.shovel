{
  assertions: [
    {
      assert: "FileExists",
      with: {
        file: "/etc/sudoers.d/jlyonsmith",
        mode: {
          user: "rw-",
          group: "r--",
          other: "r--",
        },
      },
      become: "root",
    },
    {
      assert: "FileContains",
      with: {
        file: "/etc/sudoers.d/jlyonsmith",
        content: "jlyonsmith ALL=(ALL) NOPASSWD:ALL",
      },
    },
  ],
}
