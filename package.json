{
  "name": "@johnls/octopus",
  "private": false,
  "version": "1.0.0",
  "description": "Simple, agentless IT automation",
  "bin": {
    "octopus": "dist/octopus.js"
  },
  "main": "dist/OctopusTool.js",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist/* && babel src -d dist -s --ignore **/*.test.js --ignore **/__mocks__/",
    "start": "babel-node src/octopus.js",
    "start:debug": "babel-node --inspect-brk src/octopus.js",
    "test": "jest --coverage -- ",
    "test:debug": "babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "deploy": "npm publish --access public"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "dist/",
      "node_modules/",
      "scratch/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlyonsmith/octopus.git"
  },
  "keywords": [
    "package",
    "project",
    "build",
    "release",
    "test",
    "start"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlyonsmith/octopus/issues"
  },
  "homepage": "https://github.com/jlyonsmith/octopus#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "jest-cli": "^24.8.0"
  },
  "dependencies": {
    "@johnls/readline-password": "^1.1.0",
    "autobind-decorator": "^2.4.0",
    "chalk": "^2.4.2",
    "command-exists": "^1.2.8",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.4",
    "json5": "^2.1.0",
    "minimist": "^1.2.0",
    "node-ssh": "^6.0.0",
    "ssh2-promise": "jlyonsmith/ssh2-promise",
    "tmp-promise": "^2.0.1",
    "validate.js": "^0.12.0"
  }
}
